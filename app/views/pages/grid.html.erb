<div class="dark-mode-theme">
  <div class="container">
    <div class="main-layout">
      <!-- Left Column -->
      <aside class="left-column">
        <!-- Red Button -->
        <%= link_to 'Return to Menu', games_path, class: 'red-button' %>

        <div class="profile">
          <div class="profile-picture-placeholder">[Profile Picture]</div>
          <div class="username-placeholder">Username</div>
        </div>
        <div class="stats">
          <div class="stat"><span class="stat-name">Stat 1:</span> <span class="stat-value">Value</span></div>
          <div class="stat"><span class="stat-name">Stat 2:</span> <span class="stat-value">Value</span></div>
          <div class="stat"><span class="stat-name">Stat 3:</span> <span class="stat-value">Value</span></div>
        </div>
      </aside>


      <!-- Middle Grid -->
      <main class="grid-container">
        <% 6.times do %>
          <div class="grid-row">
            <% 6.times do %>
              <div class="grid-square">
                <div class="square-content">
                  <%= image_tag 'castle.PNG', alt: 'Map Tile', class: 'image-class' %>
                </div>
              </div>
            <% end %>
          </div>
        <% end %>
      </main>

      <!-- Right Column (Player List) -->
      <aside class="right-column">
        <div class="player-list">
          <div class="player">
            <img class="player-picture" src="placeholder.jpg" alt="Player Picture">
            <div class="player-details">
              <div class="player-username">Player 1</div>
              <div class="player-stats">
                <div class="stat">Stat 1: Value</div>
                <div class="stat">Stat 2: Value</div>
                <div class="stat">Stat 3: Value</div>
              </div>
            </div>
          </div>

          <div class="player">
            <img class="player-picture" src="placeholder.jpg" alt="Player Picture">
            <div class="player-details">
              <div class="player-username">Player 2</div>
              <div class="player-stats">
                <div class="stat">Stat 1: Value</div>
                <div class="stat">Stat 2: Value</div>
                <div class="stat">Stat 3: Value</div>
              </div>
            </div>
          </div>

          <div class="player">
            <img class="player-picture" src="placeholder.jpg" alt="Player Picture">
            <div class="player-details">
              <div class="player-username">Player 3</div>
              <div class="player-stats">
                <div class="stat">Stat 1: Value</div>
                <div class="stat">Stat 2: Value</div>
                <div class="stat">Stat 3: Value</div>
              </div>
            </div>
          </div>
        </div>
      </aside>
    </div>

    <!-- Chat Section -->
    <div class="chat-section">
      <div class="chat-messages" id="chat-messages"></div>
      <div class="chat-input">
        <input type="text" id="chat-input" placeholder="Type a message..." />
        <button id="send-button">Send</button>
      </div>
    </div>
  </div>
</div>
