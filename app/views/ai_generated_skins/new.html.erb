<h1>Generate AI Skin</h1>

<!-- Form to accept character description -->
<%= form_tag generate_ai_generated_skin_path, method: :post do %>
  <div>
    <label for="character_description">Character Description:</label>
    <input type="text" id="character_description" name="character_description" placeholder="Enter character description" required>
  </div>
  <div>
    <button type="submit">Generate</button>
  </div>
<% end %>

<!-- Display Error Message -->
<% if @error %>
  <p style="color: red; font-weight: bold;">Unable To Generate Skin</p>
<% end %>

<!-- Display Generated Images -->
<% if @original_image_url %>
  <h2>Original Image</h2>
  <img src="<%= @original_image_url %>" alt="Original AI Skin" style="max-width: 100%; height: auto; border: 1px solid #ccc;">

  <h2>Image with Transparent Background</h2>
  <img src="data:image/png;base64,<%= @image_base64 %>" alt="Processed AI Skin" style="max-width: 100%; height: auto; border: 1px solid #ccc;">
<% end %>
